<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Main activity theme. -->
    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Logo</item>
    </style>

    <!-- Settings activity theme. -->


    <style name="SettingsTheme" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:actionBarStyle">@style/ActionBar.No.Logo</item>

    </style>

    <style name="ActionBar.No.Logo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/GCMcolorBlue</item>
        <item name="displayOptions">showHome|showTitle|homeAsUp</item>
        <item name="android:height">56dp</item>
        <item name="logo">@drawable/ic_action_bar</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Logo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_action_bar</item>
    </style>

</resources>
